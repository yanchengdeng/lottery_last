<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.OpenLotteryRankActivity">

    <TextView
        android:id="@+id/tv_open_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="90期/天，每日每期10分钟开奖 "
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal" />

    <include layout="@layout/view_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/red"
        android:padding="@dimen/image_padding_big"
        android:text="最\n新"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_up" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <Button
        android:id="@+id/bnt_do_lottery"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>