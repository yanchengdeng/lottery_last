<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activities.MemberSettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="用户UID:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/et_input_uid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/normal_submit_btn_gray_trans"
            android:hint="用户uid"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="@dimen/image_padding"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="    订单号:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/et_input_order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/normal_submit_btn_gray_trans"
            android:hint="订单号"
            android:inputType="phone"
            android:padding="@dimen/image_padding"
            android:singleLine="true"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="        类型:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/normal_submit_btn_gray_trans"
            android:drawableRight="@mipmap/arrow_dwon_black"
            android:hint="查询类型"
            android:padding="@dimen/image_padding"
            android:singleLine="true"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="        时间:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/normal_submit_btn_gray_trans"
            android:gravity="center"
            android:hint="请选择起始时间"
            android:paddingBottom="@dimen/image_padding"
            android:paddingTop="@dimen/image_padding"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/normal_submit_btn_gray_trans"
            android:gravity="center"
            android:hint="请选择结束时间"
            android:paddingBottom="@dimen/image_padding"
            android:paddingTop="@dimen/image_padding"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/normal_submit_btn_orange"
        android:gravity="center"
        android:padding="@dimen/image_padding_big"
        android:text="搜索"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/image_padding_big"
        android:layout_marginRight="@dimen/image_padding_big"
        android:layout_marginTop="@dimen/image_padding_big"
        android:background="@drawable/normal_submit_btn_gray_trans" />


</LinearLayout>