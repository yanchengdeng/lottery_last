<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lottery_record"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/image_padding_big"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="08 09 00"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_normal_up" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_padding"
        android:text="任选三"
        android:textColor="@color/color_info"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>
