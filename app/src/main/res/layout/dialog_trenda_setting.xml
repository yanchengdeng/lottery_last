<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/image_padding_big"
    android:paddingRight="@dimen/image_padding_big">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/image_padding_big"
        android:text="走势图设置"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_size_normal_up" />

    <include layout="@layout/view_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/image_padding_big"
        android:text="时间选择"
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_perid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/image_padding_big"
        android:text="排序规则"
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/image_padding_big"
        android:text="选号栏设置"
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_show_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/image_padding_big"
        android:text="遗漏设置"
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_miss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal_up" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/list_divider_color" />


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal_up" />

    </LinearLayout>
</LinearLayout>


