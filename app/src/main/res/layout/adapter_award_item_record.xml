<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_lottery_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/image_padding_big">


        <TextView
            android:id="@+id/tv_lottery_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/image_padding_big"
            android:text="福建11选5"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_open_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_lottery_tittle"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/image_padding_big"
            android:layout_toRightOf="@+id/tv_lottery_tittle"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="第2018092029期"
            android:textColor="@color/color_date"
            android:textSize="@dimen/text_size_normal_down" />


        <TextView
            android:id="@+id/tv_intergray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lottery_tittle"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="2积分"
            android:textColor="@color/color_date"
            android:textSize="@dimen/text_size_normal_down" />


        <TextView
            android:id="@+id/tv_lottery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_open_times"
            android:layout_alignEnd="@+id/tv_open_times"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/tv_intergray"
            android:gravity="right"
            android:text="普通订单"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_normal_down" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:drawablePadding="@dimen/image_padding"
            android:gravity="center_vertical"
            android:text="未中奖"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_normal_down" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider_color" />
</LinearLayout>