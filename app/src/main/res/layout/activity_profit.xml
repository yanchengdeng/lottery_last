<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".activities.BuyLotteryRecordActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_height"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_all_lottery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@mipmap/arrow_up_dwon_black"
                    android:gravity="center"
                    android:text="所有彩种"
                    android:textColor="@color/color_tittle"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@mipmap/arrow_up_dwon_black"
                    android:gravity="center"
                    android:text="近一周"
                    android:textColor="@color/color_tittle"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/view_line" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".activities.BuyLotteryRecordActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/image_padding_big"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="起始时间"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />


                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="@drawable/normal_submit_btn_gray_trans"
                        android:gravity="center"
                        android:hint="请选择起始时间"
                        android:paddingBottom="@dimen/image_padding"
                        android:paddingTop="@dimen/image_padding"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="结束时间"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="@drawable/normal_submit_btn_gray_trans"
                        android:gravity="center"
                        android:hint="请选择结束时间"
                        android:paddingBottom="@dimen/image_padding"
                        android:paddingTop="@dimen/image_padding"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索会员请\n输入ID或手机号码："
                    android:textColor="@color/color_info"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/et_search_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_submit_btn_gray_trans"
                    android:hint="请输入ID/手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:padding="@dimen/image_padding"
                    android:textColor="@color/color_info"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/normal_submit_btn_orange"
                android:gravity="center"
                android:padding="@dimen/image_padding_big"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_profit_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_divider_color"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/image_padding"
            android:paddingTop="@dimen/image_padding"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/profit_benifit"
                android:gravity="center_vertical"
                android:text="您的收益汇总"
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_up"
               />


            <TextView
                android:id="@+id/tv_detal_contribution"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="详细贡献 >"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="盈亏状况"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_profit_and_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="返利积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_total_daili_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="分红积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_total_bonus_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="账户积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="信用分额度"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_credit_balance_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="信用分余额"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_credit_line_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_profit_below_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_divider_color"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/image_padding"
            android:paddingTop="@dimen/image_padding"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/below_class_total"
                android:gravity="center_vertical"
                android:text="下级业绩汇总"
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_up"
                />


            <TextView
                android:id="@+id/tv_detal_achievments"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="详细业绩 >"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="下级会员总数"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_child_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="总购彩积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_child_cost_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="总中奖积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_child_reward_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="下级返利总积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_child_daili_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="下级盈利总积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_child_bonus_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="总充值积分"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_child_recharge_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="剩余可用积分总数"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_child_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

        </RelativeLayout>

        <include layout="@layout/view_line" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>